{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_SANITY_PROJECT_ID",
    "NEXT_PUBLIC_SANITY_DATASET",
    "NEXT_PUBLIC_API_URL",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "SANITY_API_TOKEN",
    "SANITY_REVALIDATE_SECRET",
    "BT_ENVIRONMENT",
    "BT_MERCHANT_ID",
    "BT_PUBLIC_KEY",
    "BT_PRIVATE_KEY",
    "BT_MONTHLY_PLAN_ID",
    "BT_PEACE_SEAL_SMALL_PLAN_ID",
    "BT_PEACE_SEAL_LARGE_PLAN_ID",
    "WEBHOOK_AUTH_TOKEN",
    "BREVO_API_KEY",
    "BREVO_FROM_EMAIL",
    "BREVO_FROM_NAME",
    "NOTIFICATIONS_BOT_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
